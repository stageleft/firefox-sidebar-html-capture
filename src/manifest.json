{
  "manifest_version": 2,
  "name": "Firefox Sidebar HTML Capture",
  "version": "1.0",

  "description": "Realtime HTML Capture",

  "icons": {
    "48": "48x48.png",
    "96": "96x96.png"
  },

  "sidebar_action": {
    "default_title": "Firefox Sidebar HTML Capture",
    "default_panel": "sidebar.html",
    "default_icon": {
      "16": "16x16.png",
      "32": "32x32.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["http://*/*",
                  "https://*/*"],
      "js": ["webpage.js"]
    }
  ],

  "applications": {
    "gecko": {
      "id": "firefox-sidebar-html-capture@elder-alliance.org"
    }
  }
}
